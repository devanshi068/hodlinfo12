<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HODLINFO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-r4Hf8ye65G1vY8R7/7GSAzOjwMOdqK2jsU8oKMHpvkLwI+xrZ6PqVMBS8EZw8wM3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/146c4de28e.js" crossorigin="anonymous"></script>
    <style>
        body {
    background-color: #191D28;
}

.header {
    display: flex;
    height: 100px;
    align-items: center;
    justify-content: space-between;
}

.left {
    color: #3DC6C1;
    font-size: 30px;
    padding: 10px 20px;
}


.end {
    display: flex;
    align-items: center;
}

#timer {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10px;
    border: 1px solid #3DC6C1;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    color: white;
    font-size: 18px;
}

.header .end button {
    background-color: #3DC6C1;
    padding: 10px;
    border-radius: 15px;
    color: white;
    font-size: 20px;
    margin-right: 10px;
    outline: none;
    border: none;
    cursor: pointer;
}

#Telegram {
    margin-right: 6px;
}

/* .highlight {
      color: red;
      font-size: 64px;
      animation: pulse 0.5s ease alternate infinite;
    } */

@keyframes pulse {
    from {
        transform: scale(1);
    }

    to {
        transform: scale(1.2);
    }
}

.slider-container {
    display: inline-block;
    position: relative;
    width: 60px;
    height: 34px;
    margin-right: 15px;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    border-radius: 34px;
    transition: 0.4s;
}

.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    border-radius: 50%;
    transition: 0.4s;
}

input:checked+.slider {
    background-color: #2196F3;
}

input:checked+.slider:before {
    transform: translateX(26px);
}

/* Rounded sliders */
.slider.round {
    border-radius: 34px;
}

.slider.round:before {
    border-radius: 50%;
}

.center {
    display: flex;
    justify-content: space-between;
    width: 200px;
    
}

.center button {
    background-color: #2E3241;
    width:100px;
    outline: none;
    padding: 10px;
    color: white;
    border-radius: 10px;
}

.center button:hover {
    background-color: #5e637a;
    color: #3DC6C1;
}

.hr {
    border-top: 1px solid #3DC6C1;
}

.best {
    display: flex;
    justify-content: center;
}

.best h1 {
    color: #50535B;
}

.average {
    display: flex;
    justify-content: center;
}

.average h3 {
    color: #50535B;
}
.main-display{
    display:flex;
    height:150px;
    width:99vw;
   
}
.five-mins, .one-hour,.main-price,.one-day,.seven-days{
    height:70px;
    margin-top:20px;
    margin-left:30px;
    width:260px;
    color:#3DC6C1;
    padding:10px;
    text-align: center;
}

.main-display p{
    color:#50535B;
    font-size:1.5rem;
}

.main-price p{
    padding-top:-10px;
    color:white;
    font-size:3.2rem;
}

.table-container {
    height: 550px;
    width: 99vw;
    overflow: auto; /* Added overflow for scrolling */
}

.table {
    width: 100%; /* Set table width to 100% */
    border-collapse: separate; /* Separate border spacing */
    border-spacing: 0 20px; /* Set border spacing (vertical horizontal) */
}

.table th,
.table td {
    padding: 12px; /* Adjust padding for cells */
    text-align: center; /* Center-align text */
    border: none; /* Remove border */
    color: white; /* Text color */
}

.table th {
    background-color: #50535B; /* Header background color */
    font-size: 1.7rem; /* Increased font size for main header */
}

.table tbody tr {
    background-color: #50535B; /* Row background color */
    color: white; /* Text color */
    border-radius: 20px; /* Add border radius */
}

.table tbody tr:hover {
    background-color: #3DC6C1; /* Hover background color */
    color: white; /* Hover text color */
}

    </style>
</head>

<body>
    <div class="header container-fluid">
        <div class="left">
            <h1>HODLINFO</h1>
        </div>
        <div class="center container">
            <button class="btn btn-primary mx-2">INR &ensp;<i class="fa-solid fa-caret-down"></i></button>
            <button class="btn btn-primary mx-2">BTC &ensp;<i class="fa-solid fa-caret-down"></i></button>
            <button class="btn btn-primary mx-2">BUY BTC </button>
        </div>
        <div class="end">
            <div id="timer">0</div>
            <button class="btn btn-primary mx-2"><i class="fab fa-telegram" id="Telegram"></i>Connect Telegram</button>
            <label class="slider-container">
                <input type="checkbox">
                <span class="slider round"></span>
            </label>
        </div>
    </div>
    <div class="hr"></div>
    <div class="best">
        <h1>BEST PRICE TO TRADE</h1>
        
    </div>
    <div class=" main-display">
      <div class="five-mins"><h1>0.1%</h1><p>5 mins</p></div>
      <div class="one-hour"><h1>0.96%</h1><p>1 Hour</p></div>
      <div class="main-price"><p>Rs.26,56,110</p></div>
      <div class="one-day"><h1>2.73%</h1><p>1 day</p></div>
      <div class="seven-days"><h1>7.51%</h1><p>7 Days</p></div>
    </div>
    <div class="average">
        <h3>Average BTC/INR net price including commission</h3>
    </div>
    <div class="table-container" >
      <table class="table table-no-border table-bordered"> <!-- Added table-bordered class to retain cell borders -->
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Platform</th>
            <th scope="col">Last Traded Price</th>
            <th scope="col">Buy/Sell Price </th>
            <th scope="col">Difference</th>
            <th scope="col">Savings</th>
          </tr>
        </thead>
        <tbody>
         
          <!-- Inside the <tbody> tag -->
  <% tickers.forEach((ticker, index) => { %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= ticker.base_unit %></td>
        <td><%= ticker.last %></td>
        <td><%=ticker.buy%></td>
        <td><%= ticker.buy - ticker.sell %></td> <!-- Difference -->
  <td><%= ticker.last - (ticker.buy - ticker.sell) %></td> <!-- Savings -->
  
      </tr>
    <% }) %>
    
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-SvlqhoFTL5I1wu7qTRlM/7Uu6z2+Vo8urBPXZbS9uLJ//PrwH/5d6ZfK7zz8m1jD" crossorigin="anonymous">
    </script>
    <script>
        let seconds = 0;
        const timerElement = document.getElementById('timer');

        function updateTimer() {
            timerElement.textContent = seconds;
            if (seconds === 0) {
                timerElement.classList.add('highlight');
            } else {
                timerElement.classList.remove('highlight');
            }
            seconds = (seconds + 1) % 60; // Increment seconds and loop back to 0
        }

        setInterval(updateTimer, 1000);

   
     </script>
     <script src="index.js"></script>
</body>

</html>
